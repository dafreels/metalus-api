{
  "storageType": "file",
  "middleware": {
    "json": {
      "enabled": true,
      "priority": 30,
      "route": "/api*",
      "module": {
        "name": "body-parser",
        "method": "json",
        "arguments": [
          {
            "limit": "2mb"
          }
        ]
      }
    },
    "appsec": {
      "priority": 110,
      "module": {
        "name": "lusca",
        "arguments": [
          {
            "csrf": false,
            "xframe": "SAMEORIGIN",
            "p3p": false,
            "csp": false
          }
        ]
      }
    },
    "router": {
      "module": {
        "arguments": [
          {
            "directory": "path:./controllers"
          }
        ]
      }
    },
    "static-schema": {
      "enabled": true,
      "priority": 121,
      "route": "/schemas",
      "module": {
        "name": "serve-static",
        "arguments": [
          "path:./schemas",
          {
            "extensions": ["json"]
          }
        ]
      }
    },
    "public-static-files": {
      "_desc": "unknown routes not matched yet will be tried to serve as static files",
      "priority": 122,
      "module": {
        "name": "serve-static",
        "arguments": [
          "path:./dist/metalus"
        ]
      }
    },
    "public-unmatched-as-ui-index": {
      "_desc": "unknown routes not matched yet will return index.html, i.e. Angular start page",
      "priority": 123,
      "module": {
        "name": "path:./lib/serve-single-file",
        "arguments": [
          "path:./dist/metalus/index.html"
        ]
      }
    }
  }
}
