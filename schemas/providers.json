{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "providers.json",
  "$ref": "#/definitions/providers",
  "definitions": {
    "providers": {
      "required": [
        "id",
        "name",
        "description",
        "providerTypeId"
      ],
      "properties": {
        "id": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "providerTypeId": {
          "type": "string"
        },
        "providerInstance": {
          "anyOf": [
            {
              "$ref": "providers.json#/definitions/DatabricksProviderInstance"
            },
            {
              "$ref": "providers.json#/definitions/GCPDataprocProviderInstance"
            },
            {
              "$ref": "providers.json#/definitions/QuboleAWSProviderInstance"
            }
          ]
        }
      }
    },
    "ProviderInstance": {
      "type": "object",
      "properties": {
        "credentials": {
          "anyOf": [
            {
              "$ref": "providers.json#/definitions/DatabricksCredential"
            },
            {
              "$ref": "providers.json#/definitions/GCPCredential"
            },
            {
              "$ref": "providers.json#/definitions/QuboleAWSCredential"
            }
          ]
        }
      }
    },
    "DatabricksProviderInstance": {
      "allOf": [
        {
          "$ref": "providers.json#/definitions/ProviderInstance"
        },
        {
          "type": "object",
          "required": [
            "instanceURL",
            "credentials"
          ],
          "properties": {
            "instanceURL": {
              "type": "string"
            }
          }
        }
      ]
    },
    "GCPDataprocProviderInstance": {
      "allOf": [
        {
          "$ref": "providers.json#/definitions/ProviderInstance"
        },
        {
          "type": "object",
          "required": [
            "credentials",
            "projectId",
            "region"
          ]
        }
      ],
      "properties": {
        "projectId": {
          "type": "string"
        },
        "region": {
          "type": "string"
        }
      }
    },
    "QuboleAWSProviderInstance": {
      "allOf": [
        {
          "$ref": "providers.json#/definitions/ProviderInstance"
        },
        {
          "type": "object",
          "required": [
            "credentials",
            "region"
          ]
        }
      ],
      "properties": {
        "region": {
          "type": "string"
        }
      }
    },
    "DatabricksCredential": {
      "type": "object",
      "properties": {
        "apiToken": {
          "type": "string"
        }
      }
    },
    "GCPCredential": {
      "type": "object",
      "properties": {
        "jsonKey": {
          "type": "string"
        }
      }
    },
    "QuboleAWSCredential": {
      "type": "object",
      "properties": {
        "authToken": {
          "type": "string"
        },
        "awsKey": {
          "type": "string"
        },
        "awsSecret": {
          "type": "string"
        }
      }
    }
  }
}
