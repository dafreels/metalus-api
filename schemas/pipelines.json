{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "pipelines.json",
    "$ref": "#/definitions/pipelines",
    "definitions": {
        "pipelines": {
            "type": "object",
            "required": [
                "id",
                "name",
                "steps"
            ],
            "properties": {
                "id": {
                    "type": "string"
                },
                "name": {
                    "type": "string"
                },
                "description": {
                    "type": "string"
                },
                "steps": {
                    "type": "array",
                    "items": {
                        "$ref": "steps.json#/definitions/steps"
                    }
                }
            }
        }
    }
}
