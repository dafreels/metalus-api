{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "steps.json",
  "$ref": "#/definitions/steps",
  "definitions": {
    "steps": {
      "allOf": [
        {
          "$ref": "steps.json#/definitions/BaseStep"
        },
        {
          "required": [
            "id"
          ],
          "properties": {
            "id": {
              "type": "string",
              "unique": true,
              "minLength": 36,
              "maxLength": 36
            },
            "project": {
              "type": "object",
              "properties": {
                "userId": {
                  "type": "string"
                },
                "projectId": {
                  "type": "string"
                }
              }
            }
          }
        }
      ]
    },
    "BaseStep": {
      "type": "object",
      "required": [
        "displayName",
        "description",
        "type",
        "params"
      ],
      "properties": {
        "displayName": {
          "type": "string",
          "minLength": 4
        },
        "category": {
          "type": "string"
        },
        "tags": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "description": {
          "type": "string",
          "minLength": 5
        },
        "type": {
          "type": "string",
          "enum": [
            "Pipeline",
            "pipeline",
            "branch",
            "fork",
            "join",
            "step-group"
          ]
        },
        "params": {
          "type": "array",
          "items": {
            "type": "object",
            "required": [
              "name",
              "type",
              "required"
            ],
            "properties": {
              "type": {
                "type": "string",
                "enum": [
                  "integer",
                  "list",
                  "boolean",
                  "script",
                  "string",
                  "text",
                  "result",
                  "object"
                ]
              },
              "name": {
                "type": "string",
                "minLength": 2
              },
              "required": {
                "type": "boolean"
              },
              "defaultValue": {
                "type": "string"
              },
              "language": {
                "type": "string"
              },
              "className": {
                "type": "string"
              },
              "parameterType": {
                "type": "string"
              }
            }
          }
        },
        "engineMeta": {
          "type": "object",
          "properties": {
            "spark": {
              "type": "string",
              "description": "Contains the step object and function to be called at runtime."
            },
            "pkg": {
              "type": "string",
              "description": "Package where this step is located"
            },
            "stepResults": {
              "type": "array",
              "items": {
                "$ref": "steps.json#/definitions/stepResults"
              }
            }
          }
        }
      }
    },
    "stepResults": {
      "type": "object",
      "properties": {
        "primaryType": {
          "type": "string"
        },
        "secondaryTypes": {
          "type": "object"
        }
      }
    }
  }
}
