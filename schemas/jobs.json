{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "jobs.json",
  "$ref": "#/definitions/jobs",
  "definitions": {
    "jobs": {
      "required": [
        "id",
        "name",
        "providerId"
      ],
      "properties": {
        "id": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "applicationId": {
          "type": "string"
        },
        "applicationName": {
          "type": "string"
        },
        "providerId": {
          "type": "string"
        },
        "projectId": {
          "type": "string"
        },
        "logLevel": {
          "type": "string"
        },
        "lastStatus": {
          "type": "string",
          "enum": [
            "PENDING",
            "RUNNING",
            "FAILED",
            "COMPLETE",
            "CANCELLED"
          ]
        },
        "useCredentialProvider": {
          "type": "boolean"
        },
        "providerInformation": {
          "oneOf": [
            {
              "$ref": "jobs.json#/definitions/BaseProviderInformation"
            }
          ]
        }
      }
    },
    "BaseProviderInformation": {
      "type": "object",
      "properties": {
        "clusterId": {
          "type": "string"
        },
        "clusterName": {
          "type": "string"
        },
        "runId": {
          "type": "string"
        },
        "bucket": {
          "type": "string"
        }
      }
    }
  }
}
